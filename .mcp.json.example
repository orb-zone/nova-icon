{
  "mcpServers": {
    "playwright": {
      "command": "bunx",
      "args": ["-y", "@executeautomation/playwright-mcp-server"]
    },
    "filesystem": {
      "command": "bunx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/absolute/path/to/nova-icon"]
    },
    "git": {
      "command": "bunx",
      "args": ["-y", "@modelcontextprotocol/server-git", "--repository", "/absolute/path/to/nova-icon"]
    },
    "fetch": {
      "command": "bunx",
      "args": ["-y", "@modelcontextprotocol/server-fetch"]
    }
  }
}
